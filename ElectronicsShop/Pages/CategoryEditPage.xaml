<Page x:Class="ElectronicsShop.Pages.CategoryEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:validation="clr-namespace:ElectronicsShop.Validation"
      Title="Редактирование категории"
      Loaded="Page_Loaded">
    <Grid Margin="{StaticResource LargeMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding WindowTitle}" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" 
                    Margin="{StaticResource StandardMargin}"
                    VerticalAlignment="Center"
                    MaxWidth="600">
            <Label Content="Название *" FontWeight="Bold"/>
            <TextBox materialDesign:HintAssist.Hint="Введите название категории">
                <TextBox.Text>
                    <Binding Path="CategoryName" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <validation:RequiredFieldValidationRule FieldName="Название категории"/>
                            <validation:MaxLengthValidationRule MaxLength="100" FieldName="Название категории"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <Label Content="Описание" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox materialDesign:HintAssist.Hint="Введите описание категории"
                     Height="100"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto">
                <TextBox.Text>
                    <Binding Path="CategoryDescription" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:MaxLengthValidationRule MaxLength="500" FieldName="Описание категории"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBlock Text="* - обязательные поля" 
                       Foreground="Red" 
                       FontSize="12"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="{StaticResource StandardMargin}">
            <Button Content="Сохранить" 
                    Click="Save_Click"
                    Width="120"
                    Margin="{StaticResource SmallMargin}"/>
            <Button Content="Отмена" 
                    Click="Cancel_Click"
                    Width="120"
                    Margin="{StaticResource SmallMargin}"/>
        </StackPanel>
    </Grid>
</Page>