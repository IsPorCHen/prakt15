<Page x:Class="ElectronicsShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Вход в систему">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Магазин электроники" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center"
                   Margin="{StaticResource LargeMargin}"/>
        
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="500">

            <Border Background="White" 
                    Padding="{StaticResource LargePadding}"
                    Margin="{StaticResource StandardMargin}"
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Вход для менеджера" 
                               Style="{StaticResource SubHeaderTextStyle}"
                               HorizontalAlignment="Center"/>

                    <PasswordBox x:Name="PinCodeBox"
                                materialDesign:HintAssist.Hint="Введите PIN-код"
                                Margin="{StaticResource StandardMargin}"
                                Padding="{StaticResource StandardPadding}"
                                KeyDown="PinCodeBox_KeyDown"/>

                    <Button Content="Войти как менеджер"
                            Click="ManagerLogin_Click"
                            Margin="{StaticResource StandardMargin}"/>
                </StackPanel>
            </Border>

            <Border Background="White" 
                    Padding="{StaticResource LargePadding}"
                    Margin="{StaticResource StandardMargin}"
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Вход для посетителя" 
                               Style="{StaticResource SubHeaderTextStyle}"
                               HorizontalAlignment="Center"/>

                    <Button Content="Войти как посетитель"
                            Click="VisitorLogin_Click"
                            Margin="{StaticResource StandardMargin}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>