<Page x:Class="ElectronicsShop.Pages.ManageDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Управление данными"
      Loaded="Page_Loaded">
    <Grid Margin="{StaticResource SmallMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <DockPanel Grid.Row="0" Margin="{StaticResource StandardMargin}">
            <Button Content="← Назад к каталогу" 
                    Click="BackToCatalog_Click"
                    DockPanel.Dock="Left"
                    Margin="{StaticResource SmallMargin}"/>
            <TextBlock Text="Управление данными" 
                       Style="{StaticResource HeaderTextStyle}"
                       HorizontalAlignment="Center"
                       DockPanel.Dock="Right"/>
        </DockPanel>

        <TabControl Grid.Row="1" Margin="{StaticResource StandardMargin}">
            <TabItem Header="Товары">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                Margin="{StaticResource StandardMargin}">
                        <Button Content="Добавить товар" 
                                Click="AddProduct_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Изменить товар" 
                                Click="EditProduct_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Удалить товар" 
                                Click="DeleteProduct_Click"
                                Margin="{StaticResource SmallMargin}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                              x:Name="ProductsDataGrid"
                              ItemsSource="{Binding Products}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="{StaticResource StandardMargin}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" Width="100"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="150"/>
                            <DataGridTextColumn Header="Бренд" Binding="{Binding Brand.Name}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Категории">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                Margin="{StaticResource StandardMargin}">
                        <Button Content="Добавить категорию" 
                                Click="AddCategory_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Изменить категорию" 
                                Click="EditCategory_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Удалить категорию" 
                                Click="DeleteCategory_Click"
                                Margin="{StaticResource SmallMargin}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                              x:Name="CategoriesDataGrid"
                              ItemsSource="{Binding Categories}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="{StaticResource StandardMargin}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Бренды">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                Margin="{StaticResource StandardMargin}">
                        <Button Content="Добавить бренд" 
                                Click="AddBrand_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Изменить бренд" 
                                Click="EditBrand_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Удалить бренд" 
                                Click="DeleteBrand_Click"
                                Margin="{StaticResource SmallMargin}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                              x:Name="BrandsDataGrid"
                              ItemsSource="{Binding Brands}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="{StaticResource StandardMargin}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Теги">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                Margin="{StaticResource StandardMargin}">
                        <Button Content="Добавить тег" 
                                Click="AddTag_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Изменить тег" 
                                Click="EditTag_Click"
                                Margin="{StaticResource SmallMargin}"/>
                        <Button Content="Удалить тег" 
                                Click="DeleteTag_Click"
                                Margin="{StaticResource SmallMargin}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                              x:Name="TagsDataGrid"
                              ItemsSource="{Binding Tags}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="{StaticResource StandardMargin}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>